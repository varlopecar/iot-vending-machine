{
  "name": "backend",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "postinstall": "pnpm prisma generate --no-engine",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node --max-old-space-size=512 dist/src/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "test:smoke": "jest --config ./test/jest-smoke.json",
    "test:deploy": "jest --testPathIgnorePatterns='src/inventory/inventory.service.spec.ts|src/stripe/stripe.service.spec.ts|src/stripe/stripe.service.native-pay.spec.ts|src/webhooks/stripe-webhook.service.spec.ts|src/jobs/jobs.router.spec.ts|src/checkout/checkout.service.spec.ts|src/checkout/checkout.service.smoke.spec.ts|src/jobs/__tests__/expire-stale-orders.job.spec.ts'",
    "test:smoke:watch": "jest --config ./test/jest-smoke.json --watch",
    "seed": "ts-node prisma/seed.ts",
    "migrate:dev": "prisma migrate dev",
    "db:migrate": "prisma migrate deploy",
    "db:setup": "pnpm prisma migrate status && pnpm prisma migrate deploy && pnpm seed",
    "db:backfill:payments": "ts-node scripts/backfill_payments_snapshots.ts",
    "db:verify:constraints": "ts-node scripts/verify_constraints.ts",
    "db:patch:machine-contact": "prisma db execute --file scripts/patch_machine_contact.sql --schema prisma/schema.prisma",
    "stripe:listen": "stripe listen --forward-to http://localhost:3000/webhooks/stripe",
    "stripe:trigger:succeeded": "stripe trigger payment_intent.succeeded",
    "stripe:trigger:failed": "stripe trigger payment_intent.payment_failed",
    "qa:refund:partial": "ts-node scripts/qa/refund-partial.ts",
    "qa:refund:total": "ts-node scripts/qa/refund-total.ts",
    "jobs:run:expire": "ts-node src/jobs/expire-stale-orders.job.ts",
    "jobs:run:cleanup": "ts-node src/jobs/cleanup-stale-payment-intents.job.ts",
    "jobs:test": "ts-node scripts/test-jobs.ts",
    "jobs:test:simple": "ts-node scripts/test-jobs-simple.ts",
    "jobs:test:minimal": "ts-node scripts/test-jobs-minimal.ts",
    "check:payments": "ts-node scripts/check-payments-setup.ts",
    "setup:deployment": "./scripts/setup-deployment.sh"
  },
  "dependencies": {
    "@nestjs/common": "^11.0.1",
    "@nestjs/core": "^11.0.1",
    "@nestjs/jwt": "^11.0.0",
    "@nestjs/passport": "^11.0.5",
    "@nestjs/platform-express": "^11.0.1",
    "@nestjs/schedule": "^6.0.0",
    "@prisma/client": "^6.13.0",
    "@prisma/extension-accelerate": "^2.0.2",
    "@types/bcrypt": "^6.0.0",
    "bcrypt": "^6.0.0",
    "dotenv": "^17.2.1",
    "nestjs-trpc": "^1.6.1",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "prisma": "^6.13.0",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1",
    "stripe": "^18.4.0",
    "zod": "^4.0.15"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.2.0",
    "@eslint/js": "^9.18.0",
    "@nestjs/cli": "^11.0.0",
    "@nestjs/schematics": "^11.0.0",
    "@nestjs/testing": "^11.0.1",
    "@types/express": "^5.0.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^22.10.7",
    "@types/supertest": "^6.0.2",
    "eslint": "^9.18.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-prettier": "^5.2.2",
    "globals": "^16.0.0",
    "jest": "^30.0.0",
    "prettier": "^3.4.2",
    "source-map-support": "^0.5.21",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.20.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
