{
  "name": "backend",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "engines": {
    "node": ">=18",
    "npm": ">=8"
  },
  "packageManager": "pnpm@9.0.0",
  "scripts": {
    "postinstall": "pnpm prisma generate --no-engine",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node --max-old-space-size=512 dist/src/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "test:smoke": "jest --config ./test/jest-smoke.json",
    "test:deploy": "jest",
    "test:smoke:watch": "jest --config ./test/jest-smoke.json --watch",
    "seed": "ts-node prisma/seed.ts",
    "migrate:dev": "prisma migrate dev",
    "db:migrate": "prisma migrate deploy",
    "db:setup": "pnpm prisma migrate status && pnpm prisma migrate deploy && pnpm seed",
    "db:backfill:payments": "ts-node scripts/backfill_payments_snapshots.ts",
    "db:verify:constraints": "ts-node scripts/verify_constraints.ts",
    "db:patch:stock-capacity": "prisma db execute --file scripts/patch_stock_capacity.sql --schema prisma/schema.prisma",
    "db:patch:machine-contact": "prisma db execute --file scripts/patch_machine_contact.sql --schema prisma/schema.prisma",
    "stripe:listen": "stripe listen --forward-to http://localhost:3000/webhooks/stripe",
    "stripe:trigger:succeeded": "stripe trigger payment_intent.succeeded",
    "stripe:trigger:failed": "stripe trigger payment_intent.payment_failed",
    "qa:refund:partial": "ts-node scripts/qa/refund-partial.ts",
    "qa:refund:total": "ts-node scripts/qa/refund-total.ts",
    "jobs:run:expire": "ts-node src/jobs/expire-stale-orders.job.ts",
    "jobs:run:cleanup": "ts-node src/jobs/cleanup-stale-payment-intents.job.ts",
    "jobs:test": "ts-node scripts/test-jobs.ts",
    "jobs:test:simple": "ts-node scripts/test-jobs-simple.ts",
    "jobs:test:minimal": "ts-node scripts/test-jobs-minimal.ts",
    "check:payments": "ts-node scripts/check-payments-setup.ts",
    "setup:deployment": "chmod +x ./scripts/setup-deployment.sh && ./scripts/setup-deployment.sh",
    "build:prod": "pnpm build && pnpm prune --prod"
  },
  "dependencies": {
    "@nestjs/common": "^11.0.1",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.0.1",
    "@nestjs/jwt": "^11.0.0",
    "@nestjs/passport": "^11.0.5",
    "@nestjs/platform-express": "^11.0.1",
    "@nestjs/schedule": "^6.0.0",
    "@nestjs/swagger": "^11.2.0",
    "@prisma/client": "^6.13.0",
    "@prisma/extension-accelerate": "^2.0.2",
    "@types/bcrypt": "^6.0.0",
    "bcrypt": "^6.0.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "dotenv": "^17.2.1",
    "nestjs-trpc": "^1.8.0",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "passport-local": "^1.0.0",
    "prisma": "^6.13.0",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1",
    "stripe": "^18.4.0",
    "swagger-ui-express": "^5.0.1",
    "zod": "^4.0.15"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.2.0",
    "@eslint/js": "^9.18.0",
    "@nestjs/cli": "^11.0.0",
    "@nestjs/schematics": "^11.0.0",
    "@nestjs/testing": "^11.0.1",
    "@types/express": "^5.0.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^22.10.7",
    "@types/passport-jwt": "^4.0.1",
    "@types/passport-local": "^1.0.38",
    "@types/supertest": "^6.0.2",
    "eslint": "^9.18.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-prettier": "^5.2.2",
    "globals": "^16.0.0",
    "jest": "^30.0.0",
    "prettier": "^3.4.2",
    "source-map-support": "^0.5.21",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.20.0"
  },
  "exports": {
    "./types": "./src/types/index.ts"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s",
      "!**/*.spec.ts",
      "!**/*.module.ts",
      "!**/*.router.ts",
      "!**/*.schema.ts",
      "!**/index.ts",
      "!main.ts",
      "!app.module.ts",
      "!config/env.schema.ts",
      "!auth/jwt.strategy.ts",
      "!auth/jwt.guard.ts",
      "!auth/current-user.decorator.ts",
      "!health/**",
      "!analytics/**",
      "!alerts/**",
      "!restocks/**",
      "!pickups/**",
      "!order-delivery/**",
      "!order-validation/**",
      "!card-payment/**",
      "!stripe/**",
      "!payments/payment-metrics.controller.ts",
      "!payments/payment-metrics.service.ts",
      "!payments/payment-monitoring.middleware.ts",
      "!payments/stripe-utils.ts",
      "!webhooks/stripe-webhook.service.ts",
      "!jobs/**",
      "!inventory/**"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "<rootDir>/main.ts",
      "<rootDir>/app.module.ts",
      ".*\\.module\\.ts$",
      ".*\\.router\\.ts$",
      ".*\\.schema\\.ts$",
      "<rootDir>/health/",
      "<rootDir>/analytics/",
      "<rootDir>/alerts/",
      "<rootDir>/restocks/",
      "<rootDir>/pickups/",
      "<rootDir>/order-delivery/",
      "<rootDir>/order-validation/",
      "<rootDir>/card-payment/",
      "<rootDir>/stripe/",
      "<rootDir>/payments/payment-metrics.controller.ts",
      "<rootDir>/payments/payment-metrics.service.ts",
      "<rootDir>/payments/payment-monitoring.middleware.ts",
      "<rootDir>/payments/stripe-utils.ts",
      "<rootDir>/webhooks/stripe-webhook.service.ts",
      "<rootDir>/jobs/",
      "<rootDir>/inventory/"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
