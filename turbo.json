{
  "$schema": "https://turborepo.com/schema.json",
  "ui": "tui",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "env": ["NEXT_PUBLIC_VERCEL_URL_PRODUCTION"],
      "outputs": [
        ".next/**",
        "!.next/cache/**",
        "dist/**",
        "apps/backend/dist/**"
      ]
    },
    "lint": {
      "dependsOn": ["^lint"],
      "env": ["NEXT_PUBLIC_VERCEL_URL_PRODUCTION", "NODE_ENV"]
    },
    "check-types": {
      "dependsOn": ["^check-types"]
    },
    "test": {
      "dependsOn": ["^test"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": ["coverage/**"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}
