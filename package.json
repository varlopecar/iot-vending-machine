{
  "name": "iot-vending-machine",
  "private": true,
  "scripts": {
    "postinstall": "cd apps/backend && pnpm prisma generate --no-engine",
    "build": "turbo run build --filter=backend",
    "build:all": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "lint:all": "turbo run lint --parallel",
    "lint:frontend": "turbo run lint --filter=web --filter=mobile --parallel",
    "test": "turbo run test",
    "test:all": "turbo run test --parallel",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types",
    "pre-push": "turbo run lint --filter=web --filter=mobile --parallel && turbo run test --filter=backend --parallel && turbo run build --filter=backend --filter=web --parallel",
    "setup-hooks": "chmod +x .git/hooks/pre-push"
  },
  "devDependencies": {
    "prettier": "^3.6.2",
    "turbo": "^2.5.6",
    "typescript": "5.8.3"
  },
  "packageManager": "pnpm@9.0.0",
  "engines": {
    "node": ">=18"
  }
}
